{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Galaxy Window Manager",
  "version": "0.9.1",
  "identifier": "com.shaqaruden.galaxy",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Galaxy Window Manager",
        "width": 960,
        "height": 700,
        "decorations": false,
        "transparent": false,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../src/shortcuts.json"
    ]
  }
}